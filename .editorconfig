# EditorConfig: http://EditorConfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.bat]
end_of_line = crlf

[*.groovy]
indent_size = 4
max_line_length = 100

[*.java]
indent_size = 2
max_line_length = 100

# Markdown files sometimes need trailing whitespaces.
[*.md]
trim_trailing_whitespace = false

[{*.yaml,*.yml}]
indent_size = 2
